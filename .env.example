# Environment variables for local development
# Copy this file to .env and update with your values

# REQUIRED: Secret key for JWT token signing (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
APP_SECRET_KEY=change-me-in-production

# REQUIRED: Encryption key for PSK storage (must be 32 bytes, generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
APP_PSK_ENCRYPTION_KEY=change-me-32-byte-encryption-key

# Database URL (default: SQLite in project root)
APP_DATABASE_URL=sqlite+pysqlite:///./app.db

# Daemon socket path (default: /tmp for development, /var/run for production)
APP_DAEMON_SOCKET_PATH=/tmp/encryptor-sim-daemon.sock
